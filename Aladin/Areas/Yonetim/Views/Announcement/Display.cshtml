@model AnnouncementViewModel

@{
    Layout = Definition.Url.Layout.Dashboard;
    ViewBag.Settings = new ViewSettings("Duyuru Görüntüle", "Duyuru Görüntüle");
}
<link href="~/Content/vendor/lightbox/css/lightbox.min.css" rel="stylesheet" />
<script src="~/Content/vendor/lightbox/js/lightbox.min.js"></script>

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            @ViewBag.Settings.PageTitle
            <div class="pull-right">
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <form id="formItems">
                @Html.HiddenFor(x => x.Announcement.ID)

                <div class="form-group">
                    @Html.LabelFor(x => x.Announcement.Category)
                    @Html.DropDownListFor(x => x.Announcement.CategoryID, Model.Categories, new { @class = "form-control" }).DisableIf(() => true)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Announcement.Title)
                    @Html.BootstrapTextBoxFor(x => x.Announcement.Title).DisableIf(() => true)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Announcement.Body)
                    @Html.Raw(Model.Announcement.Body)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Announcement.Date)
                    @Html.DatePickerFor(x => x.Announcement.Date).DisableIf(() => true)
                </div>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Dosyalar
            <div class="pull-right">
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="btn-toolbar" id="files">

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
<script src="~/Areas/Yonetim/Scripts/Announcement.js"></script>
<script>
    Announcement.GetFiles();
</script>
