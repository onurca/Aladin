@model DuesViewModel
@{
    Layout = Definition.Url.Layout.Item;
    ViewBag.Settings = Model.IsNew ? new ViewSettings("Aidat Oluştur", "Dues.Create()", "Kaydet") : new ViewSettings("Aidat Güncelle", "Dues.Update()", "Güncelle");
}

<script src="~/Areas/Admin/Scripts/Dues.js"></script>

@Html.HiddenFor(x => x.ID)
<div class="form-group">
    @Html.LabelFor(x => x.User)
    @Html.AutocompleteFor(x => x.User.ID, "/Admin/User/GetByName", string.Format("{0} {1}", Model.User.FirstName, Model.User.LastName),new { @placeholder="Yazmaya başlayınız.."}).DisableIf(() => Model.ID != Guid.Empty)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.PaidAmount)
    @Html.NumericUpDownFor(x => x.PaidAmount,0)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.RequiredAmount)
    @Html.NumericUpDownFor(x => x.RequiredAmount, 0)
</div>
<div class="form-group">
    @Html.LabelFor(x => x.Date)
    @Html.DatePickerFor(x => x.Date)
</div>

<script src="~/Scripts/Common/autocomplete.js"></script>
<script>
    $(document).ready(function () {
        PrepareDatePicker();
    })
</script>